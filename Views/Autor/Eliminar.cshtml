
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Autor

<h1>Eliminar</h1>


<form class="form-control" asp-action="Eliminar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                
                <input asp-for="IdAutor" class="form-control" hidden  />
              

                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" disabled />


                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">


                <label asp-for="APaterno" class="control-label"></label>
                <input asp-for="APaterno" class="form-control" disabled />


               
            </div>


            <div class="form-group">

                <label asp-for="AMaterno" class="control-label"></label>
                <input asp-for="AMaterno" class="form-control" disabled />


              
            </div>



        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="d-flex justify-content-start mt-3">
                <a asp-action="Index" class="btn btn-success w-50 m-2">Regresar</a>

              
                <button type="submit" class="btn btn-danger  w-50  m-2 ">Eliminar</button>
               

            </div>
        </div>

    </div>



</form>